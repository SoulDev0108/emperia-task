# Application Settings
APP_NAME=Product Management API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Settings
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/product_db
DATABASE_URL_SYNC=postgresql://user:password@localhost:5432/product_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# External API Settings
DUMMY_API_URL=https://dummyjson.com/products
API_TIMEOUT=30
API_RETRY_ATTEMPTS=3

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache Settings
CACHE_TTL=300
REDIS_URL=redis://localhost:6379/0

# Monitoring
ENABLE_HEALTH_CHECKS=True
ENABLE_METRICS=True 